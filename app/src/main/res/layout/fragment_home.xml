<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/horizontal_scrollview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="30dp">


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:id="@+id/booking_view"
                android:background="@drawable/text_box_border"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="35dp"
                    android:paddingLeft="15dp"
                    android:text="BOOKING"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:text="Description..."
                    android:textColor="#FFFFFF"
                    ></TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:id="@+id/live_view"
                android:background="@drawable/text_box_border"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="35dp"
                    android:paddingLeft="15dp"
                    android:text="LIVE"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:text="Description..."
                    android:textColor="#FFFFFF"
                    ></TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:id="@+id/routine_view"
                android:background="@drawable/text_box_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="35dp"
                    android:paddingLeft="15dp"
                    android:text="ROUTINES"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:text="Description..."
                    android:textColor="#FFFFFF"
                    ></TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:id="@+id/classroom_view"
                android:background="@drawable/text_box_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="35dp"
                    android:paddingLeft="15dp"
                    android:text="CLASS ROOM"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:text="Description..."
                    android:textColor="#FFFFFF"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:id="@+id/contest_view"
                android:background="@drawable/text_box_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="35dp"
                    android:paddingLeft="15dp"
                    android:text="CONTEST"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:text="Description..."
                    android:textColor="#FFFFFF"
                    ></TextView>

            </LinearLayout>




        </LinearLayout>


    </HorizontalScrollView>




</FrameLayout>